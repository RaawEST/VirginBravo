<Window x:Class="VirginBravo.KGBPassword"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VirginBravo"
        mc:Ignorable="d"
        Title="KGBPassword" Height="175" Width="230">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBlock Text="Введите код доступа:" FontSize="20"/>
        <PasswordBox x:Name="PasswordBox1" Grid.Row="1" Margin="5" FontSize="20"/>
        <DockPanel Grid.Row="2">
            <Button x:Name="Login" Margin="5" Width="Auto" Content="Войти в систему" Click="Login_Click"/>

        </DockPanel>
    </Grid>
</Window>
