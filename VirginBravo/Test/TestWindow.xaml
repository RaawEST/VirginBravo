<Window x:Class="VirginBravo.Test.TestWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VirginBravo.Test" xmlns:local1="clr-namespace:VirginBravo"
        mc:Ignorable="d"
        Title="TestWindow" Height="450" Width="800"
        DataContext="{DynamicResource vm}">
    <Window.Resources>
        <local1:ReceiptsViewModel x:Key="vm"/>
    </Window.Resources>
    <UniformGrid>
        <ListBox ItemsSource="{Binding Months}" SelectedItem="{Binding SelectedMonth}"/>
        <ListBox ItemsSource="{Binding Days}">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding StringFormat=DD}"/>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </UniformGrid>
</Window>
